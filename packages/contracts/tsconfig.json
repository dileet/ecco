{
  "compilerOptions": {
    "types": ["bun", "node"],
    "lib": ["ESNext"],
    "target": "ESNext",
    "module": "Preserve",
    "moduleDetection": "force",
    "allowJs": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "noEmit": true,
    "strict": true,
    "skipLibCheck": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["scripts/**/*.ts", "hardhat.config.ts", "test/**/*.ts", "artifacts/**/*.d.ts"]
}
